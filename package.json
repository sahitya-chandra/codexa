{
  "name": "codexa",
  "version": "1.2.0",
  "description": "CLI agent that indexes local repos and answers questions with hosted or local LLMs.",
  "bin": {
    "codexa": "bin/codexa.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "tsx src/cli.ts",
    "smoke": "ts-node --transpile-only scripts/smoke.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "type": "commonjs",
  "keywords": [
    "ai", "cli", "rag", "codebase", "code-analysis",
    "llm", "embeddings", "vector-search", "developer-tools",
    "code-understanding", "semantic-search", "groq"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sahitya-chandra/codexa.git"
  },
  "homepage": "codexa-neon.vercel.app",
  "bugs": {
    "url": "https://github.com/sahitya-chandra/codexa/issues"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.32",
    "@xenova/transformers": "^2.17.2",
    "ai": "^5.0.105",
    "better-sqlite3": "^9.6.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "gradient-string": "^2.0.2",
    "globby": "^13.0.0",
    "ignore": "^5.3.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.73.1",
    "ora": "^8.1.0",
    "marked": "^11.2.0",
    "marked-terminal": "^6.2.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.14"
  }
}